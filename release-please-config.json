{
  "$schema": "https://raw.githubusercontent.com/googleapis/release-please/main/schemas/config.json",
  "packages": {
    ".": {
      "release-type": "node",
      "exclude-paths": ["deploy"],
      "component": "node",
      "separate-pull-requests": true,
      "include-component-in-tag": false
    },
    "deploy/helm": {
      "release-type": "helm",
      "component": "helm",
      "separate-pull-requests": true,
      "include-component-in-tag": false
    }
  }
